@{
    ViewData["Title"] = "Purchase Invoice";
}
@if (TempData["PurchaseMessage"] != null)
{
    <div class="notification show" id="notifyMsg">
        @(TempData["PurchaseMessage"])
    </div>

    <script>
        setTimeout(() => {
            document.getElementById("notifyMsg").classList.remove("show");
        }, 2000); // stay 3s before hiding
    </script>
}
<div class="container my-4">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-receipt-cutoff"></i> Purchase Invoice</h4>
            <span class="badge bg-light text-dark px-3 py-2">#Invoice</span>
        </div>

        <div class="card-body p-4">
            <form method="post" asp-controller="Purchase" asp-action="Purchase">
                <!-- Invoice Form -->
                <div class="mb-4">
                    @Html.Partial("_PurchaseFormPartial")
                </div>

                <!-- Item List -->
                <div class="mb-0">
                    @Html.Partial("_PurchaseListPartial")
                </div>
            </form>
        </div>
    </div>

    <!-- Invoice Data / History -->
    <div class="border-0 rounded-0 mt-4">
        <div class="card-body p-0">
            @Html.Partial("_PurchaseDataListPartial")
        </div>
    </div>
</div>

