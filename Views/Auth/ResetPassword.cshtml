@model AllInOneProject.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0 w-100" style="max-width: 420px;">
        <div class="card-body p-4">
            <h3 class="card-title text-center mb-4 text-primary">
                <i class="bi bi-shield-lock"></i> Reset Password
            </h3>
            <p class="text-muted text-center mb-4">
                Enter your new password below to reset your account.
            </p>

            <form method="post" asp-controller="Auth" asp-action="ResetPassword">
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold">
                        <i class="bi bi-lock"></i> New Password
                    </label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter new password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                        <i class="bi bi-lock-fill"></i> Confirm Password
                    </label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm new password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-check-circle"></i> Reset Password
                </button>
            </form>

            <div class="text-center mt-3">
                <a href="/Auth/Login" class="small text-decoration-none">
                    <i class="bi bi-box-arrow-in-right"></i> Back to Login
                </a>
            </div>
        </div>
    </div>
</div>
