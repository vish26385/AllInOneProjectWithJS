@{
    ViewData["Title"] = "Password Reset Successful";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh; background-color: #f8f9fa;">
    <div class="card shadow-lg border-0 w-100" style="max-width: 500px; border-radius: 1rem;">
        <div class="card-body text-center p-5">
            <!-- Success Icon -->
            <div class="mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
            </div>

            <!-- Headline -->
            <h2 class="mb-3 text-success">Password Reset Successful!</h2>

            <!-- Message -->
            <p class="text-muted mb-4">
                Your password has been successfully updated. You can now log in using your new password.
            </p>

            <!-- Button -->
            <a href="/Auth/Login" class="btn btn-primary btn-lg w-100 d-flex align-items-center justify-content-center gap-2">
                <i class="bi bi-box-arrow-in-right"></i> Back to Login
            </a>

            <!-- Optional: Add subtle footer text -->
            <p class="text-muted small mt-4 mb-0">
                If you did not perform this action, please contact support immediately.
            </p>
        </div>
    </div>
</div>
