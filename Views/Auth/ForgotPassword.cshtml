@model AllInOneProject.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0 w-100" style="max-width: 420px;">
        <div class="card-body p-4">
            <h3 class="card-title text-center mb-4 text-primary">
                <i class="bi bi-key"></i> Forgot Password
            </h3>
            <p class="text-muted text-center mb-4">
                Enter your email address and we’ll send you a link to reset your password.
            </p>

            <form method="post" asp-controller="Auth" asp-action="ForgotPassword">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold">
                        <i class="bi bi-envelope"></i> Email
                    </label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your registered email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-send"></i> Send Reset Link
                </button>
            </form>

            <div class="text-center mt-3">
                <a href="/Auth/Login" class="small text-decoration-none">
                    <i class="bi bi-box-arrow-in-right"></i> Back to Login
                </a>
            </div>
        </div>
    </div>
</div>
