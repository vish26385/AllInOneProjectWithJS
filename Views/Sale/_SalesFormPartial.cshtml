<div class="card shadow-sm mb-4 p-3">
  
    <div class="form-row" style="display: flex; flex-wrap: wrap; gap: 5px; align-items: center;">

        <div class="form-group" style="display: flex; align-items: center; gap:4px;">
            <label for="saleMasterId" style="font-weight: 600;">Code</label>
            <input type="number" id="saleMasterId" class="form-control" readonly style="width:120px;" />
        </div>

        <div class="form-group" style="display: flex; align-items: center; gap:4px;">
            <label for="saleDate" style="font-weight: 600;">Date</label>
            <input type="date" id="saleDate" class="form-control" style="width:160px;" />
        </div>

        <div class="form-group" style="display: flex; align-items: center; gap:4px;">
            <label for="dueDays" style="font-weight: 600;">Due Days</label>
            <input type="number" id="dueDays" class="form-control" style="width:120px;" />
        </div>

        <div class="form-group" style="display: flex; align-items: center; gap:4px;">
            <label for="dueDate" style="font-weight: 600;">Due Date</label>
            <input type="date" id="dueDate" class="form-control" style="width:160px;" />
        </div>

        <div class="form-group" style="display: flex; align-items: center; gap:4px;">
            <label for="partyId" style="font-weight: 600;">Party</label>
            <select class="form-select" id="partyId" style="width:200px;">
                <option value="0">-- Select Party --</option>
            </select>
        </div>

        <div class="form-group" style="display: flex; align-items: center;">
            <button type="button" id="btnSave" onclick="saveSalesData()"
                    style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; border-radius: 5px; cursor: pointer; font-weight: 600; transition: background 0.3s;">
                Save
            </button>
        </div>
    </div>
</div>

<style>
    #btnSave:hover {
        background-color: #45a049;
    }

    @@media (max-width: 768px) {
        .form-row {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }

        .form-group {
            width: 100%;
        }
    }

    .card {
        border-radius: 12px;
    }
</style>
