@{
    ViewData["Title"] = "Sale Invoice";
}

<div class="container my-4">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-receipt-cutoff"></i> Sale Invoice</h4>
            <span class="badge bg-light text-dark px-3 py-2">#Invoice</span>
        </div>
        <div class="card-body p-4">
            <div class="mb-4">
                @Html.Partial("_SalesFormPartial")
            </div>

            <div class="mb-0">
                @Html.Partial("_SalesListPartial")
            </div>
        </div>
    </div>

    <div>
        @Html.Partial("_SalesDataListPartial")
    </div>
</div>
<script src="~/js/sale.js"></script>