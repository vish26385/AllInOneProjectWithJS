<h2 class="mb-4">Forgot Password</h2>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body p-4">
                <h5 class="card-title mb-3 text-center">Reset Your Password</h5>

                <form id="forgotPasswordForm">
                    <div class="mb-3">
                        <label for="forgotEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="forgotEmail"
                               placeholder="Enter your registered email" required />
                    </div>

                    <button type="button" class="btn btn-primary w-100" onclick="forgot()">
                        Send Reset Link
                    </button>
                </form>

                <div class="text-center mt-3">
                    <a href="/Account/Login" class="text-decoration-none">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function forgot() {
        const email = document.getElementById('forgotEmail').value;

        fetch('/Account/ForgotPassword', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email })
        })
        .then(res => res.json())
        .then(msg => {
            alert(msg); // you can show a styled toast/message instead
        });
    }

    window.onload = function () {
        document.getElementById('forgotEmail')?.focus();
    }
</script>
