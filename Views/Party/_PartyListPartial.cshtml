<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body">
        <h5 class="card-title mb-3">Party List</h5>

        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Party Name</th>
                    <th scope="col">Party Type</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.partyMasters != null && Model.partyMasters.Count > 0)
                {
                    for (int i = 0; i < Model.partyMasters.Count; i++)
                    {
                        <tr>
                            <td>@Model.partyMasters[i].Name</td>
                            <td>@Model.partyMasters[i].Type</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <form method="post" action="/Party/EditParty">
                                        <input type="hidden" name="Id" value="@Model.partyMasters[i].Id" />
                                        <button type="submit" class="btn btn-sm btn-warning me-1">
                                            ✎ Edit
                                        </button>
                                    </form>
                                    <form method="post" action="/Party/DeleteParty">
                                        <input type="hidden" name="Id" value="@Model.partyMasters[i].Id" />
                                        <button type="submit" class="btn btn-sm btn-danger me-1">
                                            ✕ Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No parties found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
